{% import "PuphpetMainBundle:front:macros/popover.html.twig" as popover %}
<section id="elastic_search">
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Elastic Search Quick Settings</h3>
                </div>

                <div class="row install-checkbox-container">
                    <div class="col-xs-12">
                        <label class="checkbox-inline">
                            <input type="checkbox" name="elastic_search[install]"
                                   {% if elastic_search.install %}checked{% endif %} value="1" /> Install Elastic Search
                            {% if not elastic_search.install %}<input type="hidden" name="elastic_search[install]" value="0" />{% endif %}
                        </label>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-xs-12">
                            <label>Version</label><br />

                            {% if elastic_search.settings.version is defined and elastic_search.settings.version is not empty %}
                                <label class="radio-inline">
                                    <input type="radio" name="elastic_search[settings][version]"
                                           value="{{ elastic_search.settings.version }}" checked />
                                    {{ elastic_search.settings.version }}
                                </label>
                            {% endif %}

                            {% for version in elastic_search.available_versions %}
                                {% if version != elastic_search.settings.version %}
                                    <label class="radio-inline">
                                        <input type="radio" name="elastic_search[settings][version]" value="{{ version }}" />
                                        {{ version }}
                                    </label>
                                {% endif %}
                            {% endfor %}
                        </div>

                        <div class="col-xs-12">
                            <p class="help-block">
                                Elastic Search is a powerful open source search and analytics engine that makes data
                                easy to explore.
                                <a href="http://www.elasticsearch.org/" target="_blank">Learn about Elastic Search</a>.
                                <br /><br />
                                <a href="https://github.com/elasticsearch/elasticsearch-php" target="_blank">The
                                    official Elastic Search PHP library</a>
                                <br /><br />
                                Elastic Search will be installed and the service will start automatically. Java will
                                also be installed if not already present on the vagrant box. The default port is 9200.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

    
