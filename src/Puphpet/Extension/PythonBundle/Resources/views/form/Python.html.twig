{% import "PuphpetMainBundle:front:macros/popover.html.twig" as popover %}
<section id="python">
    <div class="row">
        <div class="col-xs-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Python Quick Settings</h3>
                </div>

                <div class="row install-checkbox-container">
                    <div class="col-xs-12">
                        <p class="help-block">
                            The latest versions of Ubuntu & Debian come with <code>Python 2.7</code> but CentOS comes with <code>Python 2.6</code> out of the box.
                        </p>
                    </div>
                </div>

                {{ extra|raw }}

                <div class="panel-heading">
                    <h3 class="panel-title">Add Python Packages via Pip Client</h3>
                </div>

                <div class="row install-checkbox-container">
                    <div class="col-xs-12">
                        <label class="checkbox-inline">
                            <input type="checkbox" name="pip[install]"
                                   {% if pip.install %}checked{% endif %} value="1" /> Install Pip Client
                            {% if not pip.install %}<input type="hidden" name="pip[install]" value="0" />{% endif %}
                            {{ popover.small('<a href="https://pip.pypa.io/en/latest/index.html">Pip</a> will be available as a
                                system service:<br />
                                <code>$ pip</code>') }}
                        </label>

                        <p class="help-block">
                            The PyPA recommended tool for installing and managing Python Packages. It's a replacement for <code>easy_install</code>.
                        </p>
                    </div>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-xs-12">
                            <label for="python-pip_packages">
                                Installed Python Packages from PyPI
                                {{ popover.small('<a href="https://pypi.python.org/pypi" target="_blank">All valid PyPI</a>') }}
                            </label>
                            <select id="python-pip_packages" name="python[pip_packages][]"
                                    multiple class="form-control select-tags-editable">
                                {% for package in python.pip_packages %}
                                    <option selected value="{{ package }}">{{ package }}</option>
                                {% endfor %}
                            </select>

                            <p class="help-block">
                                To install packages from PyPI, just use <code>SomePackage</code>.
                                For ex: <code>transifex-client</code>
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

