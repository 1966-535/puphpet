<section>

    <div class="page-header">
      <h1 id="database">Database</h1>
    </div>

    <!-- Database / Quick Settings -->
    <div class="row">
        <div class="col-xs-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Quick Settings</h3>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label for="mysql-root">Root Password</label>
                            <input type="text" id="mysql-root" name="mysql[root]"
                                   value="{{ mysql.root_password }}" class="form-control" />

                            <p class="help-block">
                                Assign a password to the root user.
                                <strong>Database will only be installed
                                when a password is entered here.</strong>
                            </p>
                        </div>

                        <div class="col-md-6">
                            <label for="phpmyadmin">phpMyAdmin</label><br />
                            <label class="checkbox-inline">
                                <input type="checkbox" id="phpmyadmin" name="phpmyadmin"
                                       {% if mysql.phpmyadmin %}checked{% endif %} value="1" /> Install phpMyAdmin
                            </label>

                            <p class="help-block">
                                If installed it will be available from
                                <a href="http://phpmyadmin">http://phpmyadmin</a>. You must create
                                an entry in your hosts file!
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-xs-3 right-panel"></div>
    </div>
    <!-- end Database / Quick Settings -->

    {% for database in mysql.databases %}
        {% include 'PuphpetExtensionMysqlBundle:form/sections:NewUserAndDatabase.html.twig'
            with {'available_privileges': mysql.available_privileges, 'database': database} %}
    {% endfor %}

    <div class="row">
        <div class="col-xs-9">
            <button type="button" class="btn btn-success btn-lg btn-block addParentContainer"
                    data-source-url="{{ path('puphpet.extension.mysql.add_database') }}">Add another database</button>
        </div>
    </div>

</section>
