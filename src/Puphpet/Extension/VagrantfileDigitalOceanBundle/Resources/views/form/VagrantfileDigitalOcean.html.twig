<section id="vagrantfile-digitalocean">

    <input type="hidden" id="vagrantfile-digitalocean-vm-box" name="vagrantfile-digitalocean[vm][box]" value="{{ data.vm.box }}" />

    <!-- vagrantfile-digitalocean / Operating System -->
    <div class="row">
        <div class="col-xs-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Operating System</h3>
                </div>

                <div class="panel-body">
                    <div class="form-group">
                        {% for box in data.available_boxes %}
                            <label class="radio">
                                <input type="radio" class="update-other-input" name="vagrantfile-digitalocean[vm][box_url]"
                                       value="{{ box.url }}" {% if box.url == data.vm.box_url %}checked{% endif %}
                                       data-vagrantfile-digitalocean-vm-box="{{ box.short_name }}" />
                                {{ box.long_name }}
                                {% if box.php_versions is defined %}
                                    (PHP
                                    {% for php in box.php_versions %}
                                        <span class="label php-version-{{ php|replace('.', '-') }}">{{ php }}</span>
                                    {% endfor %}
                                    )
                                {% endif %}

                            </label>
                        {% endfor %}
                    </div>

                    <p class="help-block">
                        Choose the operating system for your VM. It will be downloaded the first time you run Vagrant.
                        <a href="http://docs.vagrantup.com/v2/getting-started/boxes.html">More
                            information may be found here</a>
                    </p>
                </div>

            </div>
        </div>
        <div class="col-xs-3 right-panel"></div>
    </div>
    <!-- end vagrantfile-digitalocean / Operating System -->

    <!-- vagrantfile-digitalocean / Details -->
    <div class="row">
        <div class="col-xs-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Set Up Local VM</h3>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="vagrantfile-digitalocean-vm-provider-virtualbox-modifyvm-name">Name Your Box</label>
                            <input type="text" id="vagrantfile-digitalocean-vm-provider-virtualbox-modifyvm-name"
                                   name="vagrantfile-digitalocean[vm][provider][virtualbox][modifyvm][name]"
                                   required placeholder="my-vm-box"
                                   value="{{ data.vm.provider.virtualbox.modifyvm.name }}" class="form-control" />

                            <p class="help-block">
                                Your personal name for the box. Should be unique to your system.
                                If you have multiple boxes running, name each one differently.
                            </p>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6">
                            <label for="vagrantfile-digitalocean-vm-network-private_network">Box IP Address</label>
                            <input type="text" id="vagrantfile-digitalocean-vm-network-private_network"
                                   name="vagrantfile-digitalocean[vm][network][private_network]"
                                   required placeholder="192.168.56.101"
                                   value="{{ data.vm.network.private_network }}" class="form-control" />

                            <p class="help-block">IP address to use for accessing the VM</p>
                        </div>

                        <div class="col-md-6">
                            <label for="vagrantfile-digitalocean-vm-provider-virtualbox-modifyvm-memory">Box Memory</label>
                            <input type="text" id="vagrantfile-digitalocean-vm-provider-virtualbox-modifyvm-memory"
                                   name="vagrantfile-digitalocean[vm][provider][virtualbox][modifyvm][memory]"
                                   required placeholder="512" pattern="^[1-9][0-9]*$" min="64"
                                   value="{{ data.vm.provider.virtualbox.modifyvm.memory }}" class="form-control" />

                            <p class="help-block">Memory to assign to VM in megabytes (only
                                integers)</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-xs-3 right-panel"></div>
    </div>
    <!-- end vagrantfile-digitalocean / Details -->

    {% for synced_folder in data.vm.synced_folder %}
        {% include 'PuphpetExtensionVagrantfileDigitalOceanBundle:form/sections:SyncedFolder.html.twig' with {'synced_folder': synced_folder} %}
    {% endfor %}

    <div class="row">
        <div class="col-xs-9">
            <button type="button" class="btn btn-success btn-lg btn-block addParentContainer"
                    data-source-url="{{ path('puphpet.extension.vagrantfile_digitalocean.synced_folder') }}">Add another shared folder</button>
        </div>
    </div>

</section>
