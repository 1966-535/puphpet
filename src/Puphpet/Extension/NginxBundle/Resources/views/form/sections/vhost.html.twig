{% set uniqid = uniqid('nxv_', true) %}

<!-- HTTP Server / Nginx / Vhost -->
<div class="row" id="{{ uniqid }}">
    <div class="col-xs-9">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Virtual Host</h3>
            </div>

            <div class="panel-body">
                <div class="row form-group">
                    <div class="col-md-6">
                        <label for="nginx-vhosts-{{ uniqid }}-servername">Server Name</label>
                        <input type="text" id="nginx-vhosts-{{ uniqid }}-servername"
                               name="nginx[vhosts][{{ uniqid }}][servername]"
                               required placeholder="awesome.dev"
                               value="{{ vhost.servername }}" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label for="nginx-vhosts-{{ uniqid }}-serveraliases">Server Aliases</label>
                        <select id="nginx-vhosts-{{ uniqid }}-serveraliases"
                                name="nginx[vhosts][{{ uniqid }}][serveraliases][]"
                                multiple class="form-control select-tags-editable">
                            {% for alias in vhost.serveraliases %}
                                <option selected value="{{ alias }}">{{ alias }}</option>
                            {% endfor %}
                        </select>

                        <p class="help-block">Separated by comma</p>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        <label for="nginx-vhosts-{{ uniqid }}-docroot">Document Root</label>
                        <input type="text" id="nginx-vhosts-{{ uniqid }}-docroot"
                               name="nginx[vhosts][{{ uniqid }}][docroot]"
                               required placeholder="/var/www/awesome"
                               value="{{ vhost.docroot }}" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label for="nginx-vhosts-{{ uniqid }}-port">Port</label>
                        <input type="text" id="nginx-vhosts-{{ uniqid }}-port"
                               name="nginx[vhosts][{{ uniqid }}][port]"
                               required placeholder="80"
                               value="{{ vhost.port }}" class="form-control" />
                    </div>
                </div>

                <div class="row form-group">

                    <div class="col-md-6">
                        <label for="nginx-vhosts-{{ uniqid }}-index_files">Index Files</label>
                        <select id="nginx-vhosts-{{ uniqid }}-index_files"
                                name="nginx[vhosts][{{ uniqid }}][index_files][]"
                                multiple class="form-control select-tags-editable">
                            {% for index_file in vhost.index_files %}
                                <option selected value="{{ index_file }}">{{ index_file }}</option>
                            {% endfor %}
                        </select>

                        <p class="help-block">The last file should be the accessor to your PHP script or front controller</p>
                    </div>

                    <div class="col-md-6">
                        <label for="nginx-vhosts-{{ uniqid }}-envvars">Environment Variables</label>
                        <select id="nginx-vhosts-{{ uniqid }}-envvars"
                                name="nginx[vhosts][{{ uniqid }}][envvars][]"
                                multiple class="form-control select-tags-editable">
                            {% for envvar in vhost.envvars %}
                                <option selected value="{{ envvar }}">{{ envvar }}</option>
                            {% endfor %}
                        </select>

                        <p class="help-block">"name value", separated by comma</p>
                    </div>
                </div>

                <p class="text-center">
                    <button type="button" class="btn btn-danger btn-sm deleteParentContainer"
                            data-parent-id="{{ uniqid }}">Remove this vhost</button>
                </p>
            </div>
        </div>
    </div>
</div>
<!-- end HTTP Server / Nginx / Vhost -->
