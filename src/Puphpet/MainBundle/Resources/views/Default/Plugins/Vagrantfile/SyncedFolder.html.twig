{% set uniqid = uniqid('vvs_', true) %}

<!-- Vagrantfile / Shared Folders -->
<div class="row" id="{{ uniqid }}">
    <div class="col-xs-9">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-title">Sharing Your Folders</h3>
            </div>

            <div class="panel-body">
                <div class="row form-group">
                    <div class="col-md-6">
                        <label for="vagrantfile-vm-synced_folder-{{ uniqid }}-id">Unique Id</label>
                        <input type="text" id="vagrantfile-vm-synced_folder-{{ uniqid }}-id"
                               name="vagrantfile[vm][synced_folder][{{ uniqid }}][id]"
                               required placeholder="webroot"
                               value="{{ synced_folder.id }}" class="form-control" />

                        <p class="help-block">
                            Give this share a unique id, ex <code>webroot</code>
                        </p>
                    </div>

                    <div class="col-md-6">
                        <label>Shared Folder Type</label><br />
                        <label class="radio-inline">
                            <input type="radio" name="vagrantfile[vm][synced_folder][{{ uniqid }}][nfs]"
                                   {% if synced_folder.nfs == false %}checked{% endif %}
                                   value="false" /> Default
                        </label>
                        <label class="radio-inline">
                            <input type="radio" name="vagrantfile[vm][synced_folder][{{ uniqid }}][nfs]"
                                   {% if synced_folder.nfs == true %}checked{% endif %}
                                   value="true" /> NFS
                        </label>

                        <p class="help-block">
                            Windows users should choose the Default option,
                            <a href="http://docs.vagrantup.com/v2/synced-folders/nfs.html">more information</a>
                        </p>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-6">
                        <label for="vagrantfile-vm-synced_folder-{{ uniqid }}-source">Box Sync Folder Source</label>
                        <input type="text" id="vagrantfile-vm-synced_folder-{{ uniqid }}-source"
                               name="vagrantfile[vm][synced_folder][{{ uniqid }}][source]"
                               required placeholder="/path/to/your/web/files"
                               value="{{ synced_folder.source }}" class="form-control" />

                        <p class="help-block">
                            Path your files are stored on host machine,
                            <a href="http://docs.vagrantup.com/v2/synced-folders/index.html">more information</a>
                        </p>
                    </div>

                    <div class="col-md-6">
                        <label for="vagrantfile-vm-synced_folder-{{ uniqid }}-target">Box Sync Folder Target</label>
                        <input type="text" id="vagrantfile-vm-synced_folder-{{ uniqid }}-target"
                               name="vagrantfile[vm][synced_folder][{{ uniqid }}][target]"
                               required placeholder="/path/on/vm"
                               value="{{ synced_folder.target }}" class="form-control" />

                        <p class="help-block">
                            Path your files are stored on host machine,
                            <a href="http://docs.vagrantup.com/v2/synced-folders/index.html">more information</a>
                        </p>
                    </div>
                </div>

                <p class="text-center">
                    <button type="button" class="btn btn-danger btn-sm deleteParentContainer"
                            data-parent-id="{{ uniqid }}">Remove this shared folder</button>
                </p>
            </div>

        </div>
    </div>
    <div class="col-xs-3 right-panel"></div>
</div>
<!-- end Vagrantfile / Shared Folders -->
