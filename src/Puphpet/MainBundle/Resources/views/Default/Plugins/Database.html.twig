<section>

    <div class="page-header">
      <h1 id="database">Database</h1>
    </div>

    <!-- Database / Quick Settings -->
    <div class="row">
        <div class="col-xs-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Quick Settings</h3>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-md-6">
                            <label for="mysql-root">Root Password</label>
                            <input type="text" id="mysql-root" name="mysql[root]"
                                   value="" class="form-control" />

                            <p class="help-block">
                                Assign a password to the root user.
                                <strong>Database will only be installed
                                when a password is entered here.</strong>
                            </p>
                        </div>

                        <div class="col-md-6">
                            <label for="phpmyadmin">phpMyAdmin</label><br />
                            <label class="checkbox-inline">
                                <input type="checkbox" id="phpmyadmin" name="phpmyadmin"
                                       checked value="1" /> Install phpMyAdmin
                            </label>

                            <p class="help-block">
                                If installed it will be available from
                                <a href="http://phpmyadmin">http://phpmyadmin</a>. You must create
                                an entry in your hosts file!
                            </p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-xs-3 right-panel"></div>
    </div>
    <!-- end Database / Quick Settings -->

    <!-- Database / Create User & Database -->
    <div class="row">
        <div class="col-xs-9">
            <div class="panel panel-info">
                <div class="panel-heading">
                    <h3 class="panel-title">Create User & Database</h3>
                </div>

                <div class="panel-body">
                    <div class="row form-group">
                        <div class="col-md-12">
                            <label for="mysql-db-vsojvs-privileges">Priveleges</label>

                            <select id="mysql-db-vsojvs-privileges"
                                    name="mysql[db][vsojvs][privileges][]" multiple size="6"
                                    class="form-control">
                                <optgroup label="Give all">
                                    <option value="ALL" selected="selected">ALL</option>
                                </optgroup>
                                <optgroup label="or, Give some">
                                    <option value="ALTER">ALTER</option>
                                    <option value="CREATE">CREATE</option>
                                    <option value="CREATE TEMPORARY TABLES">CREATE TEMPORARY TABLES</option>
                                    <option value="DELETE">DELETE</option>
                                    <option value="DROP">DROP</option>
                                    <option value="EXECUTE">EXECUTE</option>
                                    <option value="FILE">FILE</option>
                                    <option value="INDEX">INDEX</option>
                                    <option value="INSERT">INSERT</option>
                                    <option value="LOCAL TABLES">LOCAL TABLES</option>
                                    <option value="PROCESS">PROCESS</option>
                                    <option value="REFERENCES">REFERENCES</option>
                                    <option value="RELOAD">RELOAD</option>
                                    <option value="REPLICATION CLIENT">REPLICATION CLIENT</option>
                                    <option value="REPLICATION SLAVE">REPLICATION SLAVE</option>
                                    <option value="SELECT">SELECT</option>
                                    <option value="SHOW DATABASES">SHOW DATABASES</option>
                                    <option value="SHUTDOWN">SHUTDOWN</option>
                                    <option value="SUPER">SUPER</option>
                                    <option value="UPDATE">UPDATE</option>
                                    <option value="USAGE">USAGE</option>
                                    <option value="GRANT OPTION">GRANT OPTION</option>
                                </optgroup>
                            </select>
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6">
                            <label for="mysql-db-vsojvs-dbname">DB Name</label>
                            <input type="text" id="mysql-db-vsojvs-dbname"
                                   name="mysql[db][vsojvs][dbname]" placeholder="database name"
                                   value="" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label for="mysql-db-vsojvs-dbhost">DB Host</label>
                            <input type="text" id="mysql-db-vsojvs-dbhost"
                                   name="mysql[db][vsojvs][dbhost]"
                                   required placeholder="database host"
                                   value="localhost" class="form-control" />
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-6">
                            <label for="mysql-db-vsojvs-username">Username</label>
                            <input type="text" id="mysql-db-vsojvs-username"
                                   name="mysql[db][vsojvs][username]"
                                   placeholder="username"
                                   value="" class="form-control" />
                        </div>

                        <div class="col-md-6">
                            <label for="mysql-db-vsojvs-password">Password</label>
                            <input type="text" id="mysql-db-vsojvs-password"
                                   name="mysql[db][vsojvs][password]"
                                   required placeholder="password"
                                   value="" class="form-control" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <div class="col-xs-3 right-panel"></div>
    </div>
    <!-- end Database / Create User & Database -->

</section>
