{% extends 'PuphpetMainBundle:front:template.html.twig' %}

{% import "PuphpetMainBundle:front:sections.html.twig" as sections %}

{% block topJs %}
    {{ parent() }}
    <script>var uploadConfigUrl = '{{ path('puphpet.main.upload_config') }}';</script>
{% endblock %}

{% block main %}
<div id="drag-drop"><p><span class="glyphicon glyphicon-cloud-upload"></span><br />upload your config</p></div>

<div id="main-body" class="container">
    <div class="row">
        <div class="col-xs-12">{# include 'PuphpetMainBundle:front:alerts.html.twig' #}</div>
    </div>

    <div class="row">
        {% include 'PuphpetMainBundle:front:sideMenu.html.twig' %}

        <form role="form" action="{{ path('puphpet.main.homepage') }}" method="post">
            <div id="main-content" class="col-md-9 tab-content">

                {% include 'PuphpetMainBundle:front:sections/deploy-target.html.twig' %}
                {% include 'PuphpetMainBundle:front:sections/server.html.twig' %}
                {% include 'PuphpetMainBundle:front:sections/webserver.html.twig' %}

                {{ sections.singleSelectGrouped(extensionManager, 'php-engine', 'PHP') }}
                {{ sections.multiSelectGrouped(extensionManager, 'php-extensions', 'PHP Extensions') }}
                {{ sections.singleSelectGrouped(extensionManager, 'database', 'Database') }}
                {{ sections.multiSelectGrouped(extensionManager, 'nosql', 'NoSQL Database') }}
                {{ sections.multiSelectGrouped(extensionManager, 'work-queue', 'Work Queue') }}
                {{ sections.singleSelectGrouped(extensionManager, 'search-server', 'Search Server') }}

                <section id="create">
                    <div class="page-header">
                        <h1>Create your Manifest</h1>
                    </div>

                    <div class="row">
                        <div class="col-xs-12">
                            <button type="submit" class="btn btn-primary btn-lg btn-block tall text-large">
                                Go ahead then, make it!
                            </button>
                        </div>
                    </div>
                </section>
            </div>
        </form>
    </div>
</div>

{% endblock %}
