#}
{% else %}
{# no need for creating an own vhost for phpmyadmin as
it already provides a well defined one => just copy it and trigger apache restart #}
file { 'phpmyadmin.conf':
    ensure  => link,
    path    => '/etc/apache2/sites-enabled/50-phpmyadmin.conf',
    target  => '/etc/phpmyadmin/apache.conf',
    require => Class['phpmyadmin'],
    notify  => Service['apache2'],
}
{% endif %}{# if nginx/apache #}
{% endif %}{# if mysql.phpmyadmin #}
{% endif %}{# if mysql.root #}
