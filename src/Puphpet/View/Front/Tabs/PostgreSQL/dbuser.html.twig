{% if dbNum is not defined %}
{% set dbNum = 1 %}
{% endif %}

<div id="postgresql-dbuser-{{ dbNum }}">
    <legend>Create User &amp; Database #{{ dbNum }}</legend>
    <div class="control-group">
        <label class="control-label" for="postgresql-dbuser-{{ dbNum }}-privileges">Privileges</label>

        <div class="controls input-prepend">
            <span class="add-on"><b class="icon-list-alt"></b></span>
            <select multiple="multiple" id="postgresql-dbuser-{{ dbNum }}-privileges" name="postgresql[dbuser][{{ dbNum }}][privileges][]" size="6">
                <optgroup label="Give all">
                    <option value="ALL" selected="selected">ALL</option>
                </optgroup>
                <optgroup label="or, Give some">
                    <option value="SELECT">SELECT</option>
                    <option value="INSERT">INSERT</option>
                    <option value="UPDATE">UPDATE</option>
                    <option value="DELETE">DELETE</option>
                    <option value="TRUNCATE">TRUNCATE</option>
                    <option value="REFERENCE">REFERENCES</option>
                    <option value="TRIGGER">TRIGGER</option>
                    <option value="CREATE">CREATE</option>
                    <option value="CONNECT">CONNECT</option>
                    <option value="TEMPORARY">TEMPORARY</option>
                    <option value="EXECUTE">EXECUTE</option>
                    <option value="USAGE">USAGE</option>
                </optgroup>
            </select>
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="postgresql-dbuser-{{ dbNum }}-user">Username</label>

        <div class="controls">
            <input id="postgresql-dbuser-{{ dbNum }}-user" name="postgresql[dbuser][{{ dbNum }}][user]" type="text"
                   class="input-xxlarge" placeholder="username" value="" />
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="postgresql-dbuser-{{ dbNum }}-password">Password</label>

        <div class="controls">
            <input id="postgresql-dbuser-{{ dbNum }}-password" name="postgresql[dbuser][{{ dbNum }}][password]" type="text"
                   class="input-xxlarge" placeholder="password" value="" />
        </div>
    </div>

    <div class="control-group">
        <label class="control-label" for="postgresql-dbuser-{{ dbNum }}-dbname">Database Name</label>

        <div class="controls">
            <input id="postgresql-dbuser-{{ dbNum }}-dbname" name="postgresql[dbuser][{{ dbNum }}][dbname]" type="text"
                   class="input-xxlarge" placeholder="database_name" value="" />
        </div>
    </div>

    {% if dbNum != '1' %}
        <p class="text-center"><a class="postgresql-dbuser-del btn btn-danger" href="#" rel="postgresql-dbuser-{{ dbNum }}">Delete this Database</a></p>
    {% endif %}
</div>
